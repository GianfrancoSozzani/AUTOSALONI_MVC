@model AUTOSALONI_MVC.Models.Entities.Modello
<h1>Modifica il modello selezionato</h1>
@if (Model is null)
{
    <h2>Codice non trovato</h2>
}
else
{
    <form method="post">
        <div class="mt-3 d-none">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="IdModello" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Marca</label>
            <select class="form-select" asp-for="IdMarca" asp-items="@ViewBag.MarcheList">
                <option disabled selected>--Selezionare una Marca</option>
            </select>
        </div>
        <div class="mt-3">
            <label class="form-label">Modello</label>
            <input type="text" class="form-control" asp-for="modello" required maxlength="50" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salva Modifica</button>
            <button type="submit" class="btn btn-danger ms-2">Elimina</button>
        </div>
    </form>
}
