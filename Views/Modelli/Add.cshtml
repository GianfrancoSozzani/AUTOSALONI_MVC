@model AUTOSALONI_MVC.Models.AddModelloViewModel
<h1>Inserisci un Modello</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Marca</label>
        <select class="form-select" asp-for="IdMarca" asp-items="@ViewBag.MarcheList">
            <option disabled selected>--Selezionare una Marca</option>
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">Modello</label>
        <input type="text" class="form-control" asp-for="nome" required maxlength="50"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salva</button>
    </div>
</form>

