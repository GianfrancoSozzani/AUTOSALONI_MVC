@model AUTOSALONI_MVC.Models.Entities.MARCHE
<h1>Inserisci una Marca</h1>
<form method="post">
	<div class="mt-3 d-none">
		<label class="form-label">ID</label>
		<input type="text" class="form-control" asp-for="IdMarca" readonly />
	</div>
	<div class="mt-3">
		<label class="form-label">Marca</label>
		<input type="text" class="form-control" asp-for="Marca" required />
	</div>
	<div class="mt-3">
		<label class="form-label">Paese</label>
		<input type="text" class="form-control" asp-for="Paese" required />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Salva Modifica</button>
		<button type="submit" class="btn btn-danger ms-3" asp-controller="Marche" asp-action="Delete">Elimina</button>
	</div>
</form>
