@model AUTOSALONI_MVC.Models.AddAutomobileViewModel
<h1>Inserisci un Automobile</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Modello</label>
        <select class="form-select" asp-for="IdModello" asp-items="@ViewBag.ModelliList">
            <option disabled selected>--Selezionare un Modello</option>
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">Data d'acquisto</label>
        <input type="date" class="form-control" asp-for="data" required maxlength="50" />
    </div>
    <div class="mt-3">
        <label class="form-label">Targa</label>
        <input type="text" class="form-control" asp-for="targa" required maxlength="50" />
    </div>
    <div class="mt-3">
        <label class="form-label">Prezzo Offerto</label>
        <input type="text" class="form-control" asp-for="prezzo" required maxlength="50" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salva</button>
    </div>
</form>


